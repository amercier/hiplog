{
  "name": "hiplog",
  "version": "1.0.2",
  "description": "Fancy lightweight logging utility.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/amercier/hiplog"
  },
  "author": "Alex Mercier <pro.alexandre.mercier@gmail.com> (http://amercier.com)",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build:clean": "rimraf dist",
    "build:transpile": "babel --ignore *.spec.js -d dist src",
    "build": "run-s build:*",
    "prepublishOnly": "run-s build",
    "doc:clean": "rimraf esdoc",
    "doc:generate": "esdoc",
    "doc": "run-s doc:*",
    "lint": "eslint --ignore-path .gitignore .",
    "start": "cross-env NODE_ENV=development jest --watch --notify",
    "test": "jest",
    "dev": "jest --watch",
    "pre-commit": "run-p lint 'test -- --lastCommit'"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "keywords": [
    "log",
    "logging",
    "logger",
    "pretty",
    "fancy",
    "beautiful",
    "display",
    "error",
    "stack",
    "trace",
    "object"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "dateformat": "^3.0.3",
    "install": "^0.12.1",
    "jest-message-util": "^24.0.0",
    "lodash.defaults": "^4.2.0",
    "npm": "^6.1.0",
    "purdy": "^3.1.1",
    "strip-ansi": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "codecov": "^3.0.2",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-integrate-test-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.14.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-jsdoc-strict": "^2.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsdoc": "^4.0.0",
    "jest": "^23.4.2",
    "jest-extended": "^0.10.0",
    "npm-run-all": "^4.1.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2"
  },
  "pre-commit": [
    "pre-commit"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "0.10"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "jest-extended",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "jsdoc-strict"
    ],
    "rules": {
      "jsdoc/require-example": "off"
    },
    "env": {
      "browser": false
    },
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./esdoc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      },
      {
        "name": "esdoc-integrate-test-plugin",
        "option": {
          "source": "./src"
        }
      }
    ]
  }
}
